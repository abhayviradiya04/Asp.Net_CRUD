 *@
	<div class="form-group">
		<label>Employee</label>
		<select name="Eid" class="form-control">
			<option value="">Select Employee</option>
			@foreach (var emp in ViewBag.EmployeeList as IEnumerable<SelectListItem>)
			{
				var isSelected = emp.Value == Convert.ToString(Model.Eid) ? "selected" : "";
				<option value="@emp.Value" selected="@isSelected">@emp.Text</option>
			}
		</select>
	</div>


	<br/>
	<button type="submit"class="btn btn-success">Submit</button>
