@model CRUDOprationPractise.Models.DepartmentModel


<h2>@(Model.Did==0?"Add Depattment":"Update Department")</h2>
<form asp-action="Save" method="post">

	<input type="hidden" asp-for="Did"/>

	<div class="form-group">
		<label asp-for="Dname"></label>
		<input asp-for="Dname" class="form-control"/>
		<span asp-validation-for="Dname" class="text-danger"></span>
	</div>

	@* <div class="form-group">
