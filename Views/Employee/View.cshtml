@using System.Data

<style>
    h2 {
        text-align:center;
        margin-bottom:20px;
    }

    table{
        border-collapse:collapse;
        margin:0 auto;
    }
    table, th, td{
        border: 2px solid black;
    }
    th, td{
        padding: 8px 15px;
        text-align: center;
    }
</style>

<h2>Employee List
    <div></div>
    <br/>
    <a asp-action="AddOrEdit" class="btn btn-primary mb-3">Add New</a>

</h2>

<div>
    <table>

        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Salary</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow datarow in Model.Rows)
            {
                <tr>
                    <td>@datarow["Eid"]</td>
                    <td>@datarow["Ename"]</td>
                    <td>@datarow["Salary"]</td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@datarow["Eid"]" class="btn btn-success btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@datarow["Eid"]"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this employee?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
